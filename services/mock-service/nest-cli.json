{
  "$schema": "https://json.schemastore.org/nest-cli.json",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "**/*.json",
        "outDir": "dist"
      },
      {
        "include": "**/*.csv",
        "outDir": "dist"
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true,
    "builder": {
      "type": "swc",
      "typeCheck": true,
      "options": {
        "extensions": [".js", ".mjs", ".ts"],
        "swcrcPath": ".swcrc"
      }
    }
  }
}
