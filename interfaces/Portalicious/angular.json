{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "Portalicious": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "i18n": {
        "sourceLocale": "en-GB",
        "locales": {
          "ar": {
            "translation": "src/locale/messages.ar.xlf",
            "subPath": "ar"
          },
          "es": {
            "translation": "src/locale/messages.es.xlf",
            "subPath": "es"
          },
          "fr": {
            "translation": "src/locale/messages.fr.xlf",
            "subPath": "fr"
          },
          "nl": {
            "translation": "src/locale/messages.nl.xlf",
            "subPath": "nl"
          }
        }
      },
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "allowedCommonJsDependencies": [
              "@savvywombat/tailwindcss-grid-areas",
              "filesize",
              "tailwindcss/plugin"
            ],
            "localize": true,
            "i18nMissingTranslation": "ignore",
            "outputPath": "www",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": ["zone.js", "@angular/localize/init"],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "src/assets/",
                "output": "/assets/"
              },
              "src/favicon.ico"
            ],
            "styles": ["src/fonts.css", "src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.production.ts"
                }
              ],
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "1.6MB",
                  "maximumError": "2MB"
                },
                {
                  "type": "allScript",
                  "maximumWarning": "3.5MB",
                  "maximumError": "4MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kB",
                  "maximumError": "4kB"
                }
              ],
              "localize": ["ar", "en", "es", "fr", "nl"],
              "outputHashing": "all",
              "extractLicenses": true,
              "optimization": {
                "scripts": true,
                "styles": {
                  "minify": true,
                  "inlineCritical": false
                },
                "fonts": true
              },
              "serviceWorker": false
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.development.ts"
                }
              ]
            },
            "ar": {
              "localize": ["ar"]
            },
            "es": {
              "localize": ["es"]
            },
            "fr": {
              "localize": ["fr"]
            },
            "nl": {
              "localize": ["nl"]
            }
          },
          "defaultConfiguration": "development"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "Portalicious:build:production"
            },
            "development": {
              "buildTarget": "Portalicious:build:development"
            },
            "ar": {
              "buildTarget": "Portalicious:build:development,ar"
            },
            "es": {
              "buildTarget": "Portalicious:build:development,es"
            },
            "fr": {
              "buildTarget": "Portalicious:build:development,fr"
            },
            "nl": {
              "buildTarget": "Portalicious:build:development,nl"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "ng-extract-i18n-merge:ng-extract-i18n-merge",
          "options": {
            "buildTarget": "Portalicious:build",
            "format": "xlf",
            "includeContext": false,
            "includeMeaningAndDescription": true,
            "newTranslationTargetsBlank": "omit",
            "outputPath": "src/locale",
            "prettyNestedTags": false,
            "resetTranslationState": false,
            "sort": "stableAppendNew",
            "sortNestedTagAttributes": true,
            "sourceFile": "messages.xlf",
            "targetFiles": [],
            "trim": true
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing",
              "@angular/localize/init"
            ],
            "tsConfig": "tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "src/assets/",
                "output": "/assets/"
              }
            ],
            "styles": ["src/styles.scss"],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"]
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular": {
      "component": {
        "changeDetection": "OnPush",
        "skipTests": true,
        "inlineStyle": true,
        "style": "none"
      }
    }
  },
  "cli": {
    "schematicCollections": ["@angular-eslint/schematics"],
    "analytics": false
  }
}
