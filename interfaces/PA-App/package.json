{
  "name": "pa-app",
  "author": "121.global",
  "homepage": "https://www.121.global/",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/global-121/121-platform.git",
    "directory": "interfaces/PA-App"
  },
  "scripts": {
    "ng": "ng",
    "ionic": "ionic",
    "start": "ng serve --port 0",
    "generate-assets-audio": "node ./_generate-assets-audio.js",
    "check-assets-translations": "node ./_check-assets-translations.js",
    "set-env-variables": "node ./_set-env-variables.js",
    "prebuild": "npm run set-env-variables && npm run check-assets-translations && npm run generate-assets-audio",
    "build": "ng build",
    "build:prod": "npm run build -- --prod",
    "postbuild:prod": "npm run convert:styles-to-async && npm run compress:gzip && npm run compress:brotli",
    "compress:gzip": "gzipper compress --exclude mp3,webm --skip-compressed --remove-larger --level 9 ./www/",
    "compress:brotli": "gzipper compress --exclude mp3,webm --skip-compressed --remove-larger --brotli ./www/",
    "convert:styles-to-async": "node ./_convert-styles-to-async.js",
    "test": "ng test --no-watch --browsers=ChromeHeadless",
    "test:dev": "ng test",
    "test:all": "npm run lint && npm test",
    "lint:translations": "ngx-translate-lint --config=ngx-translate-lint.config.json",
    "lint:syntax": "prettier --check \"**/*.{md,js,ts,scss}\"",
    "lint": "npm run lint:syntax && ng lint && npm run lint:translations",
    "fix:syntax": "npm run lint:syntax -- --write",
    "install-dependencies-audio": "ffbinaries ffmpeg --output=node_modules/ffbinaries/",
    "postinstall": "npm run install-dependencies-audio"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^8.2.14",
    "@angular/core": "^8.2.14",
    "@angular/forms": "^8.2.14",
    "@angular/platform-browser": "^8.2.14",
    "@angular/platform-browser-dynamic": "^8.2.14",
    "@angular/router": "^8.2.14",
    "@auth0/angular-jwt": "^4.2.0",
    "@ionic/angular": "^4.11.8",
    "@ionic/cli": "^6.11.8",
    "@microsoft/applicationinsights-web": "^2.7.0",
    "@ngx-translate/core": "^12.1.2",
    "@ngx-translate/http-loader": "^4.0.0",
    "@zxing/ngx-scanner": "^2.0.1",
    "angularx-qrcode": "^1.6.4",
    "core-js": "2.6.8",
    "howler": "^2.1.3",
    "rxjs": "^6.6.2",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.803.29",
    "@angular-devkit/build-angular": "~0.803.29",
    "@angular-devkit/core": "^8.3.29",
    "@angular-devkit/schematics": "^8.3.29",
    "@angular/cli": "^8.3.29",
    "@angular/compiler": "^8.2.14",
    "@angular/compiler-cli": "^8.2.14",
    "@angular/language-service": "^8.2.14",
    "@ionic/angular-toolkit": "^2.0.0",
    "@types/jasmine": "^3.7.2",
    "@types/node": "12.x",
    "codelyzer": "^5.0.1",
    "dotenv": "^10.0.0",
    "ffbinaries": "^1.1.4",
    "gzipper": "^5.0.0",
    "jasmine-core": "^3.7.1",
    "jasmine-spec-reporter": "~5.0.2",
    "karma": "^5.1.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^3.0.2",
    "karma-jasmine": "^3.3.1",
    "karma-jasmine-html-reporter": "^1.6.0",
    "ngx-translate-lint": "^1.13.2",
    "prettier": "2.4.0",
    "prettier-plugin-organize-imports": "^2.1.0",
    "tslint": "^5.20.1",
    "typescript": "~3.5.3"
  }
}
