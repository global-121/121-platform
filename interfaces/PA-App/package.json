{
  "name": "pa-app",
  "author": "121.global",
  "homepage": "https://www.121.global/",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/global-121/121-platform.git",
    "directory": "interfaces/PA-App"
  },
  "scripts": {
    "ng": "ng",
    "ionic": "ionic",
    "start": "ng serve --port 0",
    "generate-assets-audio": "node ./_generate-assets-audio.js",
    "check-assets-translations": "node ./_check-assets-translations.js",
    "set-env-variables": "node ./_set-env-variables.js",
    "prebuild": "npm run set-env-variables && npm run check-assets-translations && npm run generate-assets-audio",
    "build": "ng build",
    "build:prod": "npm run build -- --prod",
    "postbuild:prod": "npm run check:icons-in-use && npm run convert:styles-to-async && npm run compress:gzip && npm run compress:brotli",
    "compress:gzip": "gzipper compress --exclude mp3,webm --skip-compressed --remove-larger --level 9 ./www/",
    "compress:brotli": "gzipper compress --exclude mp3,webm --skip-compressed --remove-larger --brotli ./www/",
    "convert:styles-to-async": "node ./_convert-styles-to-async.js",
    "check:icons-in-use": "node ./_check-icons-in-use.js",
    "test": "ng test --no-watch --browsers=ChromeHeadless",
    "test:dev": "ng test",
    "test:all": "npm run lint && npm test",
    "lint:translations": "ngx-translate-lint --config=ngx-translate-lint.config.json",
    "lint:syntax": "prettier --check \"**/*.{md,js,ts,scss}\"",
    "lint": "npm run lint:syntax && ng lint && npm run lint:translations",
    "fix:syntax": "npm run lint:syntax -- --write",
    "install-dependencies-audio": "ffbinaries ffmpeg --output=node_modules/ffbinaries/",
    "postinstall": "npm run install-dependencies-audio",
    "build:debug": "npm run build:prod -- --base-href=\"/pa-app/\"",
    "postbuild:debug": "shx cp www/index.html www/404.html && shx mv www \"pa-app\" && shx mkdir www && shx mv \"pa-app\" www/",
    "serve:static": "npx http-server ./www/ -c3600 --gzip --brotli --port 8088 --proxy http://localhost:8088/pa-app/?",
    "start:debug-production": "npm run build:debug && npm run serve:static"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^10.2.5",
    "@angular/core": "^10.2.5",
    "@angular/forms": "^10.2.5",
    "@angular/localize": "^10.2.5",
    "@angular/platform-browser": "^10.2.5",
    "@angular/platform-browser-dynamic": "^10.2.5",
    "@angular/router": "^10.2.5",
    "@angular/service-worker": "^10.2.5",
    "@ionic/angular": "^5.8.4",
    "@ionic/cli": "^6.11.8",
    "@microsoft/applicationinsights-web": "^2.7.0",
    "@ngx-translate/core": "^12.1.2",
    "@ngx-translate/http-loader": "^5.0.0",
    "@zxing/ngx-scanner": "3.0.1",
    "angularx-qrcode": "2.3.7",
    "core-js": "2.6.8",
    "howler": "^2.1.3",
    "rxjs": "^6.6.2",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.901.15",
    "@angular-devkit/build-angular": "~0.1002.4",
    "@angular-devkit/core": "^10.2.4",
    "@angular-devkit/schematics": "^10.2.4",
    "@angular/cli": "^10.2.4",
    "@angular/compiler": "^10.2.5",
    "@angular/compiler-cli": "^10.2.5",
    "@angular/language-service": "^10.2.5",
    "@types/jasmine": "^4.0.2",
    "@types/node": "^12.x",
    "codelyzer": "^5.1.2",
    "dotenv": "^16.0.0",
    "ffbinaries": "^1.1.4",
    "gzipper": "^5.0.0",
    "http-server": "^14.1.0",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.2.3",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ngx-translate-lint": "^1.13.2",
    "prettier": "2.5.0",
    "prettier-plugin-organize-imports": "^2.1.0",
    "shx": "^0.3.4",
    "tslint": "~6.1.0",
    "typescript": "~4.0.8"
  }
}