{
  "name": "pa-app",
  "author": "121.global",
  "homepage": "https://www.121.global/",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/global-121/121-platform.git",
    "directory": "interfaces/PA-App"
  },
  "scripts": {
    "ng": "ng",
    "ionic": "ionic",
    "start": "ng serve --port 0",
    "generate-assets-audio": "node ./_generate-assets-audio.js",
    "check-assets-translations": "node ./_check-assets-translations.js",
    "set-env-variables": "node ./_set-env-variables.js",
    "prebuild": "npm run set-env-variables && npm run check-assets-translations && npm run generate-assets-audio",
    "build": "ng build",
    "build:prod": "npm run build -- --prod",
    "postbuild:prod": "npm run check:icons-in-use && npm run compress:gzip && npm run compress:brotli",
    "compress:gzip": "gzipper compress --exclude mp3,webm --skip-compressed --remove-larger --level 9 ./www/",
    "compress:brotli": "gzipper compress --exclude mp3,webm --skip-compressed --remove-larger --brotli ./www/",
    "check:icons-in-use": "node ./_check-icons-in-use.js",
    "test": "ng test --no-watch --browsers=ChromeHeadless",
    "test:dev": "ng test",
    "test:all": "npm run lint && npm test",
    "lint:translations": "ngx-translate-lint --config=ngx-translate-lint.config.json",
    "lint:syntax": "prettier --check \"**/*.{md,js,ts,scss}\"",
    "lint": "npm run lint:syntax && ng lint && npm run lint:translations",
    "fix:syntax": "npm run lint:syntax -- --write",
    "install-dependencies-audio": "ffbinaries ffmpeg --output=node_modules/ffbinaries/",
    "postinstall": "npm run install-dependencies-audio",
    "build:debug": "npm run build:prod -- --base-href=\"/pa-app/\"",
    "postbuild:debug": "shx mv www \"pa-app\" && shx mkdir www && shx mv \"pa-app\" www/",
    "serve:static": "npx http-server ./www/ -c-1 --gzip --brotli --port 8088 --proxy http://localhost:8088/pa-app/?",
    "start:debug-production": "npm run build:debug && npm run serve:static"
  },
  "private": true,
  "engines": {
    "node": ">=12",
    "npm": ">=7"
  },
  "engineStrict": true,
  "dependencies": {
    "@angular/common": "^11.2.14",
    "@angular/core": "^11.2.14",
    "@angular/forms": "^11.2.14",
    "@angular/platform-browser": "^11.2.14",
    "@angular/platform-browser-dynamic": "^11.2.14",
    "@angular/router": "^11.2.14",
    "@angular/service-worker": "^11.2.14",
    "@ionic/angular": "^5.8.4",
    "@ionic/cli": "^6.11.8",
    "@microsoft/applicationinsights-web": "^2.7.0",
    "@ngx-translate/core": "^13.x",
    "@ngx-translate/http-loader": "^6.x",
    "@zxing/browser": "^0.0.5",
    "@zxing/library": "^0.18.3",
    "@zxing/ngx-scanner": "3.2.0",
    "angularx-qrcode": "11.0.0",
    "core-js": "2.6.8",
    "howler": "^2.2.3",
    "rxjs": "^6.6.2",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1102.19",
    "@angular-devkit/build-angular": "~0.1102.19",
    "@angular-devkit/core": "^11.2.19",
    "@angular-devkit/schematics": "^11.2.19",
    "@angular/cli": "^11.2.19",
    "@angular/compiler": "^11.2.14",
    "@angular/compiler-cli": "^11.2.14",
    "@angular/language-service": "^11.2.14",
    "@types/jasmine": "^4.0.2",
    "@types/node": "^12.x",
    "codelyzer": "^6.0.0",
    "dotenv": "^16.0.0",
    "ffbinaries": "^1.1.4",
    "gzipper": "^5.0.0",
    "http-server": "^14.1.0",
    "jasmine-core": "~3.8.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.18",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ngx-translate-lint": "^1.13.2",
    "prettier": "2.5.0",
    "prettier-plugin-organize-imports": "^2.1.0",
    "shx": "^0.3.4",
    "tslint": "~6.1.0",
    "typescript": "~4.0.8"
  }
}
