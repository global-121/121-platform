{
  "root": true,
  "ignorePatterns": [
    "projects/**/*",
    "www",
    "coverage"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "createDefaultProgram": true
      },
      "extends": [
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates",
        "prettier"
      ],
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "app",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "app",
            "style": "kebab-case"
          }
        ],
        "@angular-eslint/component-class-suffix": [
          "error",
          {
            "suffixes": [
              "Page",
              "Component"
            ]
          }
        ]
      }
    },
    {
      "files": [
        "*.html"
      ],
      "extends": [
        "plugin:@angular-eslint/template/recommended"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.spec.ts"
      ],
      "plugins": [
        "jasmine"
      ],
      "extends": [
        "plugin:jasmine/recommended"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.js"
      ],
      "env": {
        "node": true
      },
      "parserOptions": {
        "ecmaVersion": 2022
      },
      "rules": {}
    }
  ]
}
