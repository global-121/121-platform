{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2024"],

    "rootDir": "./src",
    "outDir": "./dist",

    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,

    "experimentalDecorators": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
