{
  "name": "121-platform",
  "author": "121.global",
  "homepage": "https://www.121.global/",
  "license": "Apache-2.0",
  "repository": "github:global-121/121-platform",
  "private": true,
  "scripts": {
    "start": "echo 'See README.md#getting-started \\n\\n'",
    "demo": "npx npm-run-all --npm-path npm --print-label --parallel start:all open:all",
    "start:all": "npx npm-run-all --npm-path npm --print-label --parallel start:services start:interfaces",
    "start:services": "cd services/ && docker-compose -f docker-compose.yml -f docker-compose.development.yml up -d --build",
    "start:interfaces": "npx npm-run-all --npm-path npm --print-label --parallel start:pa start:aw start:ho",
    "start:pa": "npm start --prefix interfaces/PA-App/ -- --port 8008",
    "start:aw": "npm start --prefix interfaces/AW-App/ -- --port 8080",
    "start:ho": "npm start --prefix interfaces/HO-Portal/ -- --port 8888",
    "install:all": "npx npm-run-all --npm-path npm --print-label --sequential install:services install:interfaces",
    "install:services": "cd services/ && docker-compose build",
    "install:interfaces": "npx npm-run-all --npm-path npm --print-label --sequential install:pa install:aw install:ho",
    "install:pa": "npm install --no-optional --no-audit --no-fund --prefix interfaces/PA-App/",
    "install:aw": "npm install --no-optional --no-audit --no-fund --prefix interfaces/AW-App/",
    "install:ho": "npm install --no-optional --no-audit --no-fund --prefix interfaces/HO-Portal/",
    "open:all": "npx npm-run-all --npm-path npm --parallel open:121-service open:pa-accounts open:aw open:pa open:ho",
    "open:pa": "open http://localhost:8008/",
    "open:aw": "open http://localhost:8080/",
    "open:ho": "open http://localhost:8888/",
    "open:121-service": "open http://localhost:3000/docs/",
    "open:pa-accounts": "open http://localhost:3001/docs/",
    "sync-dev-dependencies:all": "npx npm-run-all --npm-path npm --parallel sync-dev-dependencies:121-service sync-dev-dependencies:PA-accounts-service",
    "sync-dev-dependencies:121-service": "cd services/ && docker cp 121-service:/home/node/app/node_modules ./121-service/",
    "sync-dev-dependencies:PA-accounts-service": "cd services/ && docker cp pa-accounts-service:/home/node/app/node_modules ./PA-accounts-service/",
    "test": "echo 'See README.md#testing \\n\\n' && npm run test:all",
    "test:all": "npx npm-run-all --npm-path npm --print-label --parallel test:interfaces test:services",
    "test:services": "npx npm-run-all --npm-path npm --print-label --parallel test:121-service test:PA-accounts-service",
    "test:121-service": "npm test --prefix services/121-service/",
    "test:PA-accounts-service": "npm test --prefix services/PA-accounts-service/",
    "test:interfaces": "npx npm-run-all --npm-path npm --print-label --parallel test:pa test:aw test:ho",
    "test:pa": "npm test --prefix interfaces/PA-App/",
    "test:aw": "npm test --prefix interfaces/AW-App/",
    "test:ho": "npm test --prefix interfaces/HO-Portal/",
    "install": "echo 'Nothing to install here. See README.md#getting-started \\n\\n' && exit 1"
  }
}
