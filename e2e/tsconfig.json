{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "checkJs": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@121-service/*": ["./../services/121-service/*"],
      "@121-e2e/*": ["./*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
